{
  "manifest_version": 3,
  "name": "Event Capture Extension",
  "version": "1.0",
  "description": "Captura eventos de una sesión de navegación y los envía a un servidor",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-inactive-16.png",
      "32": "icons/icon-inactive-32.png",
      "48": "icons/icon-inactive-48.png",
      "128": "icons/icon-inactive-128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-inactive-16.png",
    "32": "icons/icon-inactive-32.png",
    "48": "icons/icon-inactive-48.png",
    "128": "icons/icon-inactive-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["anonymization.js", "content_script.js"]
    }
  ]
}
