{
  "manifest_version": 3,
  "name": "Event Capture Extension",
  "version": "1.0",
  "description": "Captura eventos de una sesión de navegación y los envía a un servidor",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "permissions"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://example.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
