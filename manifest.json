{
  "manifest_version": 3,
  "name": "Event Capture Extension",
  "version": "1.0",
  "description": "Captura eventos de una sesión de navegación y los envía a un servidor",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "permissions"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*",
    "https://example.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-inactive-16.png",
      "32": "icons/icon-inactive-32.png",
      "48": "icons/icon-inactive-48.png",
      "128": "icons/icon-inactive-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-inactive-16.png",
    "32": "icons/icon-inactive-32.png",
    "48": "icons/icon-inactive-48.png",
    "128": "icons/icon-inactive-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"]
    }
  ]
}
